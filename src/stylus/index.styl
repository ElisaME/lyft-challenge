.navbar
  height 10vh
  margin-bottom 0px

.map
  height: 90vh
  width: 100%

#inputbox
  width 270px
  position absolute
  top 70px
  left 10px
  z-index 2 !important
  button
    background-color $pink
    width 270px
    color white
    border none
    border-radius 6px
    padding 10px 0px
    font-weight bolder
    -webkit-box-shadow: 0px 0px 3px 1px rgba(0,0,0,0.2);
    -moz-box-shadow: 0px 0px 3px 1px rgba(0,0,0,0.2);
    box-shadow: 0px 0px 3px 1px rgba(0,0,0,0.2);
  .white
    background-color white
    padding 10px 20px
    -webkit-box-shadow: 0px 0px 3px 1px rgba(0,0,0,0.3);
    -moz-box-shadow: 0px 0px 3px 1px rgba(0,0,0,0.3);
    box-shadow: 0px 0px 3px 1px rgba(0,0,0,0.3);
    border-radius 10px
    margin-bottom 10px
    .label-input
      color $pink
      text-transform uppercase
      font-weight bolder
    .route-input
      display block
      border none
    hr
      margin 10px 0px
    .circles
      font-size 10px
    .fucsia
      color $pink
    .purple
      color $berry
    .graypipe
      color #ccc
