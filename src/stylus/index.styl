.navbar
  height 10vh
  margin-bottom 0px

.map
  height: 90vh
  width: 100%

#estimate-fare
  position absolute
  top 80px
  left 20px
  z-index 2 !important

#signup-ride
  position absolute
  top 220px
  left 20px
  z-index 2 !important
  .white
    .image
      img
        width 100%
    .title
      color $berry
      font-weight lighter
      margin-bottom 0px
    .status
      color $charc
      font-size: 10px
      margin-top 0px
    .price
      color $berry
    .info
      color $charc
      font-size 10px

.inputbox
  width 320px

  .buttons
    background-color $pink
    width 320px
    color white
    border none
    border-radius 6px
    padding 10px 0px
    font-weight bolder
    -webkit-box-shadow: 0px 0px 3px 1px rgba(0,0,0,0.2);
    -moz-box-shadow: 0px 0px 3px 1px rgba(0,0,0,0.2);
    box-shadow: 0px 0px 3px 1px rgba(0,0,0,0.2);
  .white
    background-color white
    padding 10px 20px
    -webkit-box-shadow: 0px 0px 3px 1px rgba(0,0,0,0.3);
    -moz-box-shadow: 0px 0px 3px 1px rgba(0,0,0,0.3);
    box-shadow: 0px 0px 3px 1px rgba(0,0,0,0.3);
    border-radius 10px
    margin-bottom 10px
    .label-input
      color $pink
      text-transform uppercase
      font-weight bolder
    .route-input
      display block
      border none
    hr
      margin 10px 0px
    .circles
      font-size 10px
    .fucsia
      color $pink
    .purple
      color $berry
    .graypipe
      color #ccc
